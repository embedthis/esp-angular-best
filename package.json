{
    "name": "esp-best",
    "description": "ESP Best Practices Angular Skeleton",
    "version": "5.0.0-rc0",
    "keywords": [
        "esp",
    ],
    "dependencies": {
        "esp-angular-mvc": "~5.0",
        "less": ">=1.3.3",
        "bootstrap": "~3",
        "angular-bootstrap": ">=0.7.0",
        "html5shiv": "*",
        "font-awesome": "*",
        "more": "*",
        "respond": "*"
    },
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        },
        {
            "type": "Commercial",
            "url": "http://embedthis.com/licensing/"
        }
    ],
    "export": [
        {
            from: "*.less",
            to: '${JSLIB}/esp-best',
        }
    ],
    "esp": {
        "?auth": "app",
        "?mode": "debug",
        "modes": {
            "debug": {
                "login": {
                    "?name": "",
                    "?abilities": {
                        "edit": true,
                        "view": true
                    },
                    "?required": "",
                }
            },
            "release": {
                "login": {
                    "?name": "",
                    "?abilities": {
                        "edit": true,
                        "view": true
                    },
                    "?required": "",
                }
            }
        },
        "server": {
            "generate": {
                "-appweb": "esp-angular-mvc/appweb.conf",
                "?appweb": "esp-best/appweb.conf",
            }
        }
    }
}
