{
    "name": "esp-best",
    "description": "ESP Best Practices Angular Skeleton",
    "version": "5.1.0",
    "keywords": [
        "esp",
    ],
    "dependencies": {
        "esp-angular-mvc": "~5",
        "less": ">=1.3.3",
        "bootstrap": "~3",
        "angular-bootstrap": ">=0.7.0",
        "html5shiv": "*",
        "font-awesome": "*",
        "more": "*",
        "respond": "*"
    },
    "licenses": [ {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        }, {
            "type": "Commercial",
            "url": "https://embedthis.com/licensing/"
        }
    ],
    "export": [ {
            from: "*.less",
            to: '${LIB}/esp-best',
            overwrite: true,
        }
    ],
    "app": {
        "esp": {
            "generate": {
                "-appweb": "esp-angular-mvc/appweb.conf",
                "?appweb": "esp-best/appweb.conf",
            }
        },
        "http": {
            "?auth": {
                "store": "app",
            },
        },
        "?mode": "debug",
        "modes": {
            "debug": {
                "http": {
                    "auth": {
                        "login": {
                            "?name": "",
                            "?roles": [ "*" ],
                        },
                    },
                    content: {
                        "?stylesheets": "less",
                    },
                },
            },
            "release": {
                "http": {
                    "auth": {
                        "login": {
                            "url": "",
                        },
                    },
                    "cache": [{
                        "client": "1day",
                        "extensions": [ "css", "gif", "ico", "jpeg", "jpg", "js", "html", "less", "png", "pdf", "txt" ],
                    }],
                    "content": {
                        "?combine":     [ "c", "css", "html", "js" ],
                        "?compress":    [ "css", "html", "js", "txt", "xml" ],
                        "?minify":      [ "css", "html", "js" ],
                        "?stylesheets": "css",
                    },
                    "?redirect": "https://"
                },
            },
        },
    },
}
