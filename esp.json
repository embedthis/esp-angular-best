{
    "esp": {
        "generate": {
            "-appweb": "esp-angular-skeleton/appweb.conf",
            "?appweb": "esp-best/appweb.conf"
        }
    },
    "http": {
        "?auth": {
            "store": "app"
        }
    },
    "?mode": "debug",
    "modes": {
        "debug": {
            "esp": {
                "compile": "symbols",
                "combine": false
            },
            "http": {
                "auth": {
                    "auto": {
                        "?name": "",
                        "?roles": [ "*" ]
                    }
                },
                "compress": false
            }
        },
        "release": {
            "esp": {
                "compile": "optimized",
                "combine": true
            },
            "http": {
                "auth": {
                    "auto": {
                        "url": ""
                    }
                },
                "cache": true,
                "compress": true,
                "?redirect": "https://"
            }
        }
    }
}
